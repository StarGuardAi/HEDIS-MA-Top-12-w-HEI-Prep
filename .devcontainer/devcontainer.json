{
  "name": "HEDIS GSD Prediction Engine",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-python.flake8",
        "charliermarsh.ruff",
        "ms-vscode.powershell"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length=88"],
        "python.sortImports.args": ["--profile", "black"],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.*": true
        },
        "jupyter.askForKernelRestart": false,
        "jupyter.interactiveWindow.creationMode": "perFile"
      }
    }
  },
  "forwardPorts": [8888, 8000],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Notebook",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "FastAPI Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && pre-commit install",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspaces/hedis-gsd-prediction-engine/data,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/models,target=/workspaces/hedis-gsd-prediction-engine/models,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/workspaces/hedis-gsd-prediction-engine"
}
